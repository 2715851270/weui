/* pages/button/button.wxss */

button {
  position: relative;
  display: block;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  text-decoration: none;
  line-height: 2.65;
  border: 1rpx solid #dcdfe6;
  border-radius: 4rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #101113;
  background-color: #f4f4f6;
  margin: 10rpx;
}

button::after {
  border-radius: 4rpx;
  border: none;
}

button[type=default] {
  border-color: #dcdfe6;
  color: #101113;
  background-color: #fff;
}

.button-hover[type=default] {
  color: rgba(0, 0, 0, 0.6) !important;
  background-color: #f5f5f5 !important;
}

button[type=default][plain] {
  background-color: transparent;
  border: 1rpx solid #dcdfe6;
  color: #101113;
}

.button-hover[type=default][plain] {
  border-color: #dcdfe6;
}

button[type=primary] {
  color: #fff;
  background-color: #409eff;
  border-color: transparent;
}

.button-hover[type=primary] {
  color: rgba(255, 255, 255, 0.6) !important;
  background-color: #2d8cf0 !important;
  border-color: transparent;
}

button[type=primary][plain] {
  background-color: transparent;
  border: 1rpx solid #409eff;
  color: #409eff;
}

.button-hover[type=primary][plain] {
  border-color: #2d8cf0;
}

button[type=success] {
  color: #fff;
  background-color: #67c23a;
  border-color: transparent;
}

.button-hover[type=success] {
  color: rgba(255, 255, 255, 0.6) !important;
  background-color: #56b229 !important;
  border-color: transparent;
}

button[type=success][plain] {
  background-color: transparent;
  border: 1rpx solid #67c23a;
  color: #67c23a;
}

.button-hover[type=success][plain] {
  border-color: #56b229;
}

button[type=warning] {
  color: #101113;
  background-color: #ffc107;
  border-color: transparent;
}

.button-hover[type=warning] {
  color: rgba(0, 0, 0, 0.6) !important;
  background-color: #eeb200 !important;
  border-color: transparent;
}

button[type=warning][plain] {
  background-color: transparent;
  border: 1rpx solid #ffc107;
  color: #ffc107;
}

.button-hover[type=warning][plain] {
  border-color: #eeb200;
}

button[type=danger] {
  color: #fff;
  background-color: #e64340;
  border-color: transparent;
}

.button-hover[type=danger] {
  color: rgba(255, 255, 255, 0.6) !important;
  background-color: #ce3c39 !important;
  border-color: transparent;
}

button[type=danger][plain] {
  background-color: transparent;
  border: 1rpx solid #e64340;
  color: #e64340;
}

.button-hover[type=danger][plain] {
  border-color: #ce3c39;
}

button.shadow[type=default] {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

button.shadow[type=primary] {
  box-shadow: 0 8rpx 24rpx rgba(14, 113, 214, 0.25);
}

button.shadow[type=success] {
  box-shadow: 0 8rpx 24rpx rgba(26, 173, 25, 0.25);
}

button.shadow[type=warning] {
  box-shadow: 0 8rpx 24rpx rgba(238, 178, 0, 0.25);
}

button.shadow[type=danger] {
  box-shadow: 0 8rpx 24rpx rgba(230, 67, 64, 0.25);
}

button.radius {
  border-radius: 1000em;
}

button[disabled][type=default] {
  color: rgba(0, 0, 0, 0.3);
  background-color: #f4f4f6;
}

button[disabled][type=primary] {
  background-color: #b3d8ff;
}

button[disabled][type=success] {
  background-color: #c2e7b1;
}

button[disabled][type=warning] {
  background-color: #ffe69c;
  color: rgba(0, 0, 0, 0.3);
}

button[disabled][type=danger] {
  background-color: #f5b4b3;
}
