.table-view {
  position: relative;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.table-view::before {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  height: 1rpx;
  content: '';
  background-color: #ebeef5;
}

.table-view:after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 1rpx;
  content: '';
  background-color: #ebeef5;
}

.table-view-cell {
  position: relative;
  padding: 20rpx 40rpx 22rpx;
  min-height: 92rpx;
}

.table-view-cell::after {
  content: '';
  position: absolute;
  right: 40rpx;
  bottom: 1rpx;
  left: 40rpx;
  height: 1rpx;
  background-color: #ebeef5;
}

.table-view-cell:last-child::after {
  content: none;
}

.table-view-cell navigator {
  position: relative;
  display: block;
  overflow: hidden;
  margin: -20rpx -40rpx -22rpx;
  padding: inherit;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: inherit;
}

