.table-view-after {
  float: right;
  font-size: 28rpx;
  color: #909399;
  line-height: 50rpx;
}

.media-object {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  background-color: #dcdfe6;
  overflow: hidden;
  margin-right: 20rpx;
}

.media-object.sm {
  width: 50rpx;
  height: 50rpx;
}

.media-ellipsis {
  display: -webkit-box;
  font-size: 26rpx;
  color: #909399;
  white-space: normal;
  line-height: 1.25;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.media-list .media-ellipsis {
  margin-top: 2rpx;
}

.table-view-cell .innertxt {
  position: absolute;
  display: block;
  width: 100%;
  top: 1rpx;
  bottom: 1px;
  z-index: 5;
  padding: 20rpx 40rpx 22rpx 0;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  background-color: #fff;
}

.table-view-del {
  position: absolute;
  top: 1rpx;
  bottom: 1px;
  width: 180rpx;
  right: 0;
  text-align: center;
  z-index: 4;
  color: #fff;
  background-color: #e64340;
}
