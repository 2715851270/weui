.block {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}

badge {
  margin-right: 10rpx;
}

button {
  position: relative;
  display: block;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 32rpx;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  border: 1rpx solid #dcdfe6;
  border-radius: 4rpx;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #101113;
  background-color: #f2f6fc;
}

button::after {
  border-radius: 4rpx;
  border: none;
}

button {
  margin: 10rpx;
}

button[size=mini] {
  margin-right: 10rpx;
}

.colorBox {
  background: #fff;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.color-item {
  flex: 1;
}

.color-item label {
  display: block;
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.color-item text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  text-transform: capitalize;
}
